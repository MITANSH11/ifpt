<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="root" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="calc.calcappfx.TaxController">

    <!-- Title -->
    <Label layoutX="230.0" layoutY="34.0" styleClass="title-label" text="Tax Calculator" />

    <!-- Income Input -->
    <Label layoutX="50.0" layoutY="100.0" styleClass="input-label" text="Total Income (₹):" />
    <TextField fx:id="incomeField" layoutX="250.0" layoutY="98.0" prefWidth="250.0" styleClass="input-field" />

    <!-- Deductions -->
    <Label layoutX="50.0" layoutY="150.0" styleClass="input-label" text="Deductions (₹):" />
    <TextField fx:id="deductionsField" layoutX="250.0" layoutY="148.0" prefWidth="250.0" styleClass="input-field" />

    <!-- Regime Selection -->
    <Label layoutX="50.0" layoutY="200.0" styleClass="input-label" text="Tax Regime:" />
    <ChoiceBox fx:id="regimeChoice" layoutX="250.0" layoutY="198.0" prefWidth="250.0" styleClass="input-field" />

    <!-- Calculate Button -->
    <Button fx:id="calculateButton" layoutX="250.0" layoutY="250.0" onAction="#calculateTax" styleClass="calculate-button" text="Calculate" />

    <!-- Result -->
    <Label layoutX="50.0" layoutY="320.0" styleClass="result-label" text="Estimated Tax (₹):" />
    <Label fx:id="taxLabel" layoutX="250.0" layoutY="320.0" styleClass="result-value" text="0.00" />

    <!-- Back Button -->
    <Button fx:id="backButton" layoutX="50.0" layoutY="431.0" onAction="#backToMain" styleClass="back-button" text="Back" />

</AnchorPane>
