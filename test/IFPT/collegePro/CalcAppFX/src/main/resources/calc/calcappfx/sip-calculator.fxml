<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="root" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="calc.calcappfx.SipController">

    <!-- Title -->
    <Label layoutX="264.0" layoutY="34.0" styleClass="title-label" text="SIP Calculator" />

    <!-- Monthly Investment Input -->
    <Label layoutX="50.0" layoutY="100.0" styleClass="input-label" text="Monthly Investment (₹):" />
    <TextField fx:id="monthlyInvestmentField" layoutX="250.0" layoutY="98.0" prefWidth="250.0" styleClass="input-field" />

    <!-- Expected Annual Return Rate -->
    <Label layoutX="50.0" layoutY="150.0" styleClass="input-label" text="Annual Return Rate (%):" />
    <TextField fx:id="returnRateField" layoutX="250.0" layoutY="148.0" prefWidth="250.0" styleClass="input-field" />

    <!-- Investment Period -->
    <Label layoutX="50.0" layoutY="200.0" styleClass="input-label" text="Investment Period (years):" />
    <TextField fx:id="investmentPeriodField" layoutX="250.0" layoutY="198.0" prefWidth="250.0" styleClass="input-field" />

    <!-- Calculate Button -->
    <Button fx:id="calculateButton" layoutX="250.0" layoutY="250.0" onAction="#calculateSIP" styleClass="calculate-button" text="Calculate" />

    <!-- Results -->
    <Label layoutX="50.0" layoutY="320.0" styleClass="result-label" text="Total Investment (₹):" />
    <Label fx:id="totalInvestmentLabel" layoutX="250.0" layoutY="320.0" styleClass="result-value" text="0.00" />

    <Label layoutX="50.0" layoutY="350.0" styleClass="result-label" text="Estimated Returns (₹):" />
    <Label fx:id="estimatedReturnsLabel" layoutX="250.0" layoutY="350.0" styleClass="result-value" text="0.00" />

    <Label layoutX="50.0" layoutY="380.0" styleClass="result-label" text="Total Value (₹):" />
    <Label fx:id="totalValueLabel" layoutX="250.0" layoutY="380.0" styleClass="result-value" text="0.00" />

    <!-- Back Button -->
    <Button fx:id="backButton" layoutX="50.0" layoutY="431.0" onAction="#backToMain" styleClass="back-button" text="Back" />
</AnchorPane>
